<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="KeypadAction">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/dark_100</item>
        <item name="android:textSize">@dimen/text_30</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:background">@drawable/selector_keypad_action</item>
    </style>

    <style name="Title22" parent="Text22Primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dp_32</item>
        <item name="android:layout_marginEnd">@dimen/dp_32</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="Description18" parent="Text18Primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dp_32</item>
        <item name="android:layout_marginEnd">@dimen/dp_32</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:maxLines">5</item>
    </style>

    <style name="LargeBlueButton" parent="BlueButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/dp_58</item>
        <item name="android:layout_marginEnd">@dimen/dp_58</item>
    </style>

    <style name="BlueButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:textColor">@color/selector_blue_button</item>
        <item name="android:background">@drawable/selector_blue_button</item>
        <item name="android:elevation">@dimen/dp_40</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>
</resources>